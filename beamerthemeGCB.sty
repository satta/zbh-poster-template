\ProvidesPackage{beamerthemeGCB}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\selectcolormodel{cmyk}
\mode<presentation>

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% custom colors
\definecolor{zbhcolorscheme1}{HTML}{EAEAEA}  % e.g. for block title
\definecolor{zbhcolorblockbg}{HTML}{F5F5F5}
\definecolor{zbhcolorblockfg}{HTML}{FF0000}
\definecolor{zbhcolorscheme2}{HTML}{333333}  % e.g. title in headline
\definecolor{zbhcolorscheme3}{HTML}{FFFFFF}  % e.g. for poster background
\definecolor{zbhcolorscheme4}{HTML}{000000}
\definecolor{zbhcolorschemeHeadline}{HTML}{0033cc}
\definecolor{zbhcolorschemeFootline}{HTML}{100D09}

% headline colors and fonts
\setbeamercolor{headline}{fg=white,bg=zbhcolorscheme1}
\setbeamercolor{title in headline}{fg=black}
\setbeamercolor{author in headline}{fg=zbhcolorscheme2}
\setbeamercolor{institute in headline}{fg=zbhcolorscheme2}
\setbeamercolor{logo in headline}{fg=black,bg=lightgray}
\setbeamercolor{separation line}{bg=white}

% footline colors and fonts
\setbeamercolor{footline}{fg=black,bg=zbhcolorscheme1}
\setbeamerfont{footline}{fg=black, size=\normalsize}

% body colors and fonts
\setbeamercolor*{normal text}{fg=black,bg=zbhcolorscheme3}

% block environment
\setbeamercolor*{block body}{fg=black, bg=zbhcolorblockbg}
\setbeamercolor*{block title}{fg=zbhcolorblockfg}
\setbeamerfont{block title}{size=\Large}

% example environment
\setbeamercolor*{example title}{fg=white,bg=zbhcolorscheme1}
\setbeamerfont{example title}{size=\large,series=\bf,bg=zbhcolorscheme1,fg=white}

\setbeamercolor{alerted text}{fg=zbhcolorblockfg}
\setbeamercolor{structure}{fg=zbhcolorscheme2}

\setbeamertemplate{navigation symbols}{}  % no navigation on a poster
\useinnertheme{GCB}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[leftskip=0cm,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}\insertblocktitle
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[colsep*=.75ex,sep=.75ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  \justifying
}
\setbeamertemplate{block end}{
  \end{beamercolorbox}
  \vskip2ex
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{
  \leavevmode
  \begin{beamercolorbox}[wd=\paperwidth]{headline}
   \vskip1.5cm
    \begin{columns}[T]
      \begin{column}{.3\paperwidth}
        \begin{center}
          \includegraphics[width=1\linewidth]{UHH_Logo}
        \end{center}
        \vskip1.5cm
      \end{column}
      \begin{column}{.65\paperwidth}
        \vskip4ex
        \raggedleft
        \usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}\\[3ex]}
        \usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[.7ex]}
        \usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}\\[1ex]}
        \vskip4ex
      \end{column}
    \end{columns}
    \vskip3ex
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{footline}{
  \begin{beamercolorbox}[wd=\paperwidth]{upper separation line foot}
    \rule{0pt}{2pt}
 \end{beamercolorbox}

  \begin{beamercolorbox}[ht=4ex,leftskip=1cm,rightskip=1cm]{footline}%
